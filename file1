#include<iostream>
using namespace std;
int main()
{
    int a,b;
    int *p=&a;
    int *q=&b;
    // taking input using pointer
    cout<<"enter the first number : "<<endl;
    cin>> *p;
    cout<<"enter the second number : "<<endl;
    cin>> *q;
    cout<<"sum is : "<<(*p + *q);
    cout<<"division is : "<<((*p )/(*q));
    
}
